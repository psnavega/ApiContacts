@model RedefinirSenha
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir senha";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger mt-2" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">
    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Username" class="form-control" id="login" />
        @Html.ValidationMessageFor(x => x.Username)
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" id="email" />
        @Html.ValidationMessageFor(x => x.Email)
    </div>


    <button type="submit" class="btn btn-primary w-100">Redefinir senha</button>
    <a class="btn btn-secondary w-100 mt-2" asp-action="Index" asp-controller="Login">Voltar</a>
</form>