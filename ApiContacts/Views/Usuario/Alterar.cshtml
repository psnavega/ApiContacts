@model Usuario
@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="text-center">
    <h1 class="display-4">Editar Usuário</h1>
</div>

<form asp-controller="Usuario" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do usuário">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o seu email do usuário">
    </div>
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o seu celular do usuário">
    </div>
    <div class="form-group">
        <label for="nome">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="">Selecione</option>
            <option value="@ApiContacts.Domains.Enums.PerfilEnum.Admin">Administrador</option>
            <option value="@ApiContacts.Domains.Enums.PerfilEnum.Padrao">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-block btn-primary w-100" asp-action="Alterar">Alterar</button>
        <a class="btn btn-block btn-secondary w-100 mt-2" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
    </div>
</form>

