@{
    ViewData["Title"] = "Apagar Contato";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Contato</h1>
</div>

<form>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do contato">
    </div>
    <div class="form-group">
        <label for="nome">Email</label>
        <input type="text" class="form-control" placeholder="Digite o seu email do contato">
    </div>
    <div class="form-group">
        <label for="nome">Celular</label>
        <input type="text" class="form-control" placeholder="Digite o seu celular do contato">
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary w-100">Adicionar</button>
        <a class="btn btn-block btn-secondary w-100 mt-2" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </div>
</form>

