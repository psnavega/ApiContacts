@model Contato 
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
    </div>
    <div class="form-group">
        <label for="nome">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o seu email do contato">
    </div>
    <div class="form-group">
        <label for="nome">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o seu celular do contato">
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-block btn-primary w-100" asp-action="Alterar">Alterar</button>
        <a class="btn btn-block btn-secondary mt-2 w-100" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </div>
</form>

